  <span class="nl">box-shadow</span><span class="p">:</span> <span class="m">0</span> <span class="m">0</span> <span class="m">5px</span> <span class="m">#03e9f4</span><span class="p">,</span> <span class="m">0</span> <span class="m">0</span> <span class="m">25px</span> <span class="m">#03e9f4</span><span class="p">,</span> <span class="m">0</span> <span class="m">0</span> <span class="m">50px</span> <span class="m">#03e9f4</span><span class="p">,</span> <span class="m">0</span> <span class="m">0</span> <span class="m">100px</span> <span class="m">#03e9f4</span><span class="p">;</span>
<span class="p">}</span>
<span class="nc">.login</span> <span class="nt">a</span> <span class="nt">span</span><span class="p">{</span>
